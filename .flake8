[flake8]
max-line-length = 88
extend-ignore = 
; Most of these are for compatibility with black or isort
    E203
    W503
    E501
    E402
    F401
    F403
    E722
    W291
    W293
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
per-file-ignores =
    __init__.py:F401
